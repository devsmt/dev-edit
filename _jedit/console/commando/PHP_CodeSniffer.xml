<!--
PHP_CodeSniffer
/usr/bin/phpcs -sw --standard=PSR2 file.php
-->
<COMMANDO>
<UI>
<CAPTION LABEL="PHP_CodeSniffer">
<FILE_ENTRY LABEL="script" VARNAME="file" EVAL="buffer.getName()"/>
</CAPTION>

<CAPTION LABEL="standard">
<CHOICE LABEL="standard" VARNAME="standard" DEFAULT="@PSR1" >
    <OPTION  LABEL="PSR1" VALUE="PSR1"/>
    <OPTION  LABEL="PSR2" VALUE="PSR2"/>
    <OPTION  LABEL="PSR4" VALUE="PSR4"/>
</CHOICE>
</CAPTION>



</UI>

<COMMANDS>

<COMMAND SHELL="System" CONFIRM="FALSE">
<!-- cd to working dir -->

buf = new StringBuilder("cd ");
buf.append(MiscUtilities.getParentOfPath(buffer.getPath()));
buf.toString();

</COMMAND>

<COMMAND SHELL="System" CONFIRM="FALSE">

buf = new StringBuilder("/usr/bin/phpcs");
buf.append(" ");
//if (type.equals("compile")){}
buf.append(" -sw --verbose --standard=");
buf.append(standard);
buf.append(" ");
buf.append(file)
</COMMAND>


</COMMANDS>
</COMMANDO>
